@model ozo.Models.ViewNajam

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Najam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kolicina" class="control-label"></label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatumOd" class="control-label"></label>
                <input asp-for="DatumOd" class="form-control" />
                <span asp-validation-for="DatumOd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatumDo" class="control-label"></label>
                <input asp-for="DatumDo" class="form-control" />
                <span asp-validation-for="DatumDo" class="text-danger"></span>
            </div>



            <div class="form-group">

                <label asp-for="VrstaNajmaId"></label>
                <div><span asp-validation-for="VrstaNajmaId" class="text-danger" /></div>
                <select class="form-control" asp-for="VrstaNajmaId" asp-items="ViewBag.NajamList">
                    <option disabled selected value="">Odaberit najam</option>
                </select>

            </div>
            <div class="form-group">
                <label asp-for="FimraId"></label><label style="font-size:12px; float:right;">*autocomplete</label>
                <div><span asp-validation-for="FimraId" class="text-danger"></span></div>
                <input class="form-control" data-autocomplete="Najam"
                       data-autocomplete-result="imeopreme"
                       value="" />
                <input type="hidden" asp-for="FimraId" data-autocomplete-result="imeopreme" />
            </div>


            <div class="form-group">

                <label asp-for="OpremaId"></label>
                <div><span asp-validation-for="OpremaId" class="text-danger" /></div>
                <select class="form-control" asp-for="OpremaId" asp-items="ViewBag.OpremaList">
                    <option disabled selected value="">Odaberit najam</option>
                </select>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>

    <script src="~/js/autocomplete.js"></script>

}
@section styles{
    <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/jquery-ui.css" />
}

